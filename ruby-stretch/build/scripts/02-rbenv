#! /bin/sh

set -e
set -x
export DEBIAN_FRONTEND=noninteractive

## download and run install-rbenv.sh in crazyp83/ruby-binary repository
curl -o /tmp/build/ruby-stretch/tmp/install-rbenv.sh https://raw.githubusercontent.com/crazyp83/ruby-binary/master/install-rbenv.sh
chmod +x /tmp/build/ruby-stretch/tmp/install-rbenv.sh
/tmp/build/ruby-stretch/tmp/install-rbenv.sh

